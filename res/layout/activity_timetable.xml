<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Timetable"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Day Selector -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/daySelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddEntry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Class"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="8dp"
            app:iconGravity="textStart"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadTimetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:drawableStart="@drawable/ic_upload"
            android:drawablePadding="8dp"
            app:iconGravity="textStart"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Current Day Display -->
    <TextView
        android:id="@+id/tvCurrentDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday's Schedule"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Timetable Entries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimetable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No classes scheduled for today\nTap 'Add Class' to add your first class"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>